<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.passwordhamster.controller.PasswordGeneratorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="466.0" prefWidth="460.0">
        <TextField fx:id="generatedPasswordField" editable="false" layoutX="81.0" layoutY="31.0" prefHeight="26.0" prefWidth="296.0" />
        <Text layoutX="81.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Generated password:" />
        <Button fx:id="generatePasswordButton" layoutX="168.0" layoutY="69.0" mnemonicParsing="false" onMouseClicked="#onGenerateButtonClick" prefHeight="36.0" prefWidth="122.0" text="Generate" />
        <Text layoutX="76.0" layoutY="202.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Length" />
        <CheckBox fx:id="shouldPasswordContainSpecialCharactersCheckBox" layoutX="73.0" layoutY="250.0" mnemonicParsing="false" text="Special characters can occur" />
        <CheckBox fx:id="shouldPasswordContainLowercaseAndUppercaseLettersCheckBox" layoutX="73.0" layoutY="331.0" mnemonicParsing="false" text="Uppercase and lowercase characters can occur" />
        <CheckBox fx:id="shouldPasswordContainNumbersCheckBox" layoutX="73.0" layoutY="291.0" mnemonicParsing="false" text="Numbers can occur" />
        <TextField fx:id="passwordLengthField" layoutX="73.0" layoutY="206.0" onKeyTyped="#onLengthInput" prefHeight="26.0" prefWidth="49.0" />
      <Button fx:id="savePasswordButton" layoutX="169.0" layoutY="117.0" mnemonicParsing="false" onMouseClicked="#onSavePasswordButtonClick" prefHeight="26.0" prefWidth="122.0" text="Save" />
      <TextField fx:id="errorTextField" editable="false" layoutX="41.0" layoutY="386.0" prefHeight="26.0" prefWidth="377.0" />
      <Button fx:id="savedPasswordsButton" layoutX="169.0" layoutY="153.0" mnemonicParsing="false" onMouseClicked="#onSavedPasswordsButtonClick" prefHeight="36.0" prefWidth="122.0" text="Saved passwords" />
      <Button fx:id="changePasswordButton" layoutX="166.0" layoutY="420.0" mnemonicParsing="false" onMouseClicked="#onChangePasswordButtonClick" prefHeight="26.0" prefWidth="126.0" text="Change password" />
      <TextField fx:id="passwordGeneratorTagTextField" layoutX="90.0" layoutY="118.0" prefHeight="26.0" prefWidth="70.0" />
      <Text layoutX="94.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tag:" />
    </AnchorPane>
</VBox>
